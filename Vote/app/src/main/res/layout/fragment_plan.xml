<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.vote.SummaryFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/vote"
        app:backgroundTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/sv_summaryScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="233dp"
                android:layout_marginBottom="15dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/dao" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:fontFamily="Raleway"
                    android:text="Proposal for the Creation of a Decentralized Autonomous Organization "
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView48"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="Railway"
                        android:text="Satoshi"
                        android:textColor="@color/blue_main"
                        android:textSize="11sp" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#919191"
                        android:orientation="horizontal"></LinearLayout>

                    <TextView
                        android:id="@+id/textView47"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="Segoe UI"
                        android:text="May 6"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="Raleway"
                    android:text="The blockchain technology has introduced new possibilities for decentralized governance models that eliminate the need for intermediaries, such as governments or corporations. DAOs are one of these possibilities, enabling people to come together, pool their resources, and make decisions collectively without a central authority."
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="Raleway"
                    android:text="Proposal"
                    android:textAlignment="center"
                    android:textColor="@color/blue_main"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="Raleway"
                    android:text="The proposed DAO will be established as a non-profit organization that operates autonomously through smart contracts on the blockchain. It will have a transparent and open governance structure that allows all members to participate in decision-making, voting, and proposal submission.

The DAO's primary objective will be to support and fund community-driven projects and initiatives. Members will be able to propose new projects, vote on the allocation of funds, and participate in the management and execution of approved initiatives. The DAO will operate on a self-sustaining model where a portion of the funds raised from the community will be used to cover operational expenses, while the rest will be allocated to the approved projects"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="Raleway"
                    android:text="The governance structure of the DAO will include a multi-tier system that comprises of:

    The Executive Board: The board will consist of community members who will be responsible for the management of the DAO's operations, including financial management, decision-making, and proposal screening.

    Working Groups: Working groups will be formed for specific areas of focus, such as community outreach, fundraising, project management, etc. Members can join these groups based on their interests and skill sets.

    General Membership: All members will have equal voting rights and can submit proposals for consideration by the Executive Board."
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="Raleway"
                    android:text="Conclusion"
                    android:textAlignment="center"
                    android:textColor="@color/blue_main"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="Raleway"
                    android:text="The proposed DAO will serve as a platform for decentralized community governance, enabling members to collaborate on initiatives that benefit the community as a whole. The transparent and open governance structure will ensure that all members have a voice and are involved in decision-making, creating a truly democratic and inclusive organization. We believe that this DAO will be a powerful tool for building and strengthening the community, and we encourage all members to support this proposal."
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>